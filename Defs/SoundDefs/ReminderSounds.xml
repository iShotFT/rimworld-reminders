<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    
    <!-- Low Severity Reminder Sound -->
    <SoundDef>
        <defName>AdvRem_ReminderLow</defName>
        <context>MapOnly</context>
        <maxSimultaneous>1</maxSimultaneous>
        <subSounds>
            <li>
                <grains>
                    <li Class="AudioGrain_Clip">
                        <clipPath>UI/Widgets/CancelMode</clipPath>
                    </li>
                </grains>
                <volumeRange>0.7~0.8</volumeRange>
                <pitchRange>1.2~1.3</pitchRange>
            </li>
        </subSounds>
    </SoundDef>
    
